  <body>
    <div class="containerSignup">
      <h2>Sign Up</h2>
      <div class="signup">
        <a class="logo" href="/"><img src="./../static/img/logo.png" /></a>
        <form id="signupForm">
          <div class="inputList">
            <input
              type="text"
              name="mbti"
              placeholder="나의 MBTI"
              required
            /><span></span>
          </div>
          <a
            target="_blank"
            href="https://www.16personalities.com/ko/%EB%AC%B4%EB%A3%8C-%EC%84%B1%EA%B2%A9-%EC%9C%A0%ED%98%95-%EA%B2%80%EC%82%AC"
            ><u><i class="fa-solid fa-link"></i> MBTI검사 하러가기</u></a
          >
          <div class="inputList">
            <input type="text" name="id" placeholder="아이디" required />
            <span></span>
          </div>
          <div class="inputList">
            <input type="password" name="pw" placeholder="비밀번호" required />
            <span></span>
          </div>
          <div class="inputList">
            <input
              type="email"
              name="email"
              placeholder="이메일"
              required
            /><span></span>
          </div>
          <div class="inputList">
            <input
              type="text"
              name="name"
              placeholder="이름"
              required
            /><span></span>
          </div>
          <div class="inputList">
            <input
              id="date"
              type="date"
              name="age"
              placeholder="생년월일"
              required
            />
            <span></span>
          </div>
          <div class="inputList">
            <input
              type="text"
              name="nick"
              placeholder="닉네임"
              required
            /><span></span>
          </div>

          <div class="radio">
            <div><i class="fa-solid fa-venus-mars"></i></div>
            <div>
              <label for="man"> 남</label
              ><input type="radio" name="gender" id="man" required />
            </div>
            <div>
              <label for="woman"> 여</label
              ><input type="radio" name="gender" id="woman" required />
            </div>
          </div>
          <button id="signupBtn" type="button" onclick="onSignup()">
            회원가입
          </button>
        </form>
      </div>
    </div>
